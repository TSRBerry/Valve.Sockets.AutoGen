<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <AssemblyName>GameNetworkingSockets</AssemblyName>
        <RootNamespace>Valve.Sockets</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DefineConstants>VALVESOCKETS_SPAN</DefineConstants>
      <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DefineConstants>VALVESOCKETS_SPAN</DefineConstants>
    </PropertyGroup>

    <PropertyGroup>
        <ArrayNamespace>Valve.Sockets</ArrayNamespace>
        <ArrayOutputPath>$(MSBuildProjectDirectory)\Generated</ArrayOutputPath>
    </PropertyGroup>

    <ItemGroup>
<!--        <ProjectReference Include="..\Valve.Sockets.SourceGen\Valve.Sockets.SourceGen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />-->
        <PackageReference Include="Valve.Sockets.Tasks" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
